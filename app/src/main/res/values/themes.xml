<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Islamy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
        <!-- Light theme mode -->
        <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
            <item name="colorPrimary">@color/white</item>
            <item name="colorPrimaryDark">@color/black</item>
            <item name="colorAccent">@color/orange</item>
        </style>

        <!-- Dark theme mode -->
        <style name="darkTheme" parent="ThemeOverlay.AppCompat.Dark">
            <item name="colorPrimary">#212121</item>
            <item name="colorPrimaryDark">@color/white</item>
            <item name="colorAccent">@color/teal_700</item>
        </style>
    <style name="Theme.Notes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Islamy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Islamy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Islamy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>